<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_40dp"
    tools:context="com.pacia.ptms.activity.transport.TransProDetailActivity">

    <TextView
        android:id="@+id/tv_pro_statue"
        style="@style/Tv_Default_Style"
        android:layout_marginBottom="@dimen/size_20dp"
        android:text=""
        android:textSize="@dimen/tv_16sp" />

    <TextView
        android:id="@+id/tv_pro_place"
        style="@style/Tv_Content"
        android:layout_marginBottom="@dimen/size_20dp"
        android:text=""
        android:textSize="@dimen/tv_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Tv_Content"
            android:text="确认时间："
            android:textSize="@dimen/tv_16sp" />

        <TextView
            android:id="@+id/tv_pro_time"
            style="@style/Tv_Default_Style"
            android:text=""
            android:textSize="@dimen/tv_16sp" />
    </LinearLayout>
</LinearLayout>

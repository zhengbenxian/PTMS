<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_5dp"
    android:background="@drawable/shape_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/size_5dp">

    <TextView
        android:id="@+id/item_tv_apti_name"
        style="@style/Tv_Default_Style"
        android:text="资质名称"
        android:textSize="@dimen/tv_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/Tv_Content"
                android:paddingTop="@dimen/size_3dp"
                android:text="证件号码"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/item_tv_card"
                style="@style/Tv_Content"
                android:paddingTop="@dimen/size_3dp"
                android:text="" />

            <TextView
                style="@style/Tv_Content"
                android:paddingTop="@dimen/size_3dp"
                android:text="证件时效"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/item_tv_apti_time"
                style="@style/Tv_Content"
                android:paddingTop="@dimen/size_3dp"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:id="@+id/basic_apti_icon"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:padding="@dimen/size_3dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
</LinearLayout>
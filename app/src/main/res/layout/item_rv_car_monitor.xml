<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_5dp"
    android:background="@drawable/shape_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/size_8dp">

    <ImageView
        android:id="@+id/img_monitor_icon"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:src="@drawable/ic_play" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_monitor_name"
            style="@style/Tv_Default_Style"
            android:paddingBottom="@dimen/size_10dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_monitor_status"
            style="@style/Tv_Default_Style"
            android:background="@drawable/shape_stroke_green_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingTop="@dimen/size_5dp"
            android:text=""
            android:textColor="@color/color_green" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_10dp"
        android:src="@mipmap/right_rocket" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_5dp"
    android:orientation="vertical"
    android:padding="@dimen/size_8dp">

    <TextView
        android:id="@+id/tv_item_viola_time"
        style="@style/Tv_Content"
        android:padding="@dimen/size_8dp"
        android:text="时间" />

    <com.pacia.ptms.widget.MyGridView
        android:id="@+id/gv_viola"
        style="@style/GridView_Style"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp" />

    <TextView
        android:id="@+id/tv_item_viola_content"
        style="@style/Tv_Default_Style"
        android:paddingLeft="@dimen/size_8dp"
        android:paddingRight="@dimen/size_8dp"
        android:singleLine="false"
        android:text="送达" />

    <TextView
        android:id="@+id/tv_item_viola_name"
        style="@style/Tv_Default_Style"
        android:layout_width="match_parent"
        android:gravity="right"
        android:padding="@dimen/size_3dp"
        android:text="送达"
        android:textSize="@dimen/tv_12sp" />

    <TextView
        android:id="@+id/tv_item_viola_tel"
        style="@style/Tv_Default_Style"
        android:layout_width="match_parent"
        android:gravity="right"
        android:padding="@dimen/size_3dp"
        android:text="送达"
        android:textColor="@color/color_green"
        android:textSize="@dimen/tv_12sp" />
</LinearLayout>
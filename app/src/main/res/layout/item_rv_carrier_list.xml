<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_8dp"
    android:background="@drawable/shape_item_bg"
    android:orientation="horizontal"
    android:padding="@dimen/size_10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/Tv_Default_Style"
            android:layout_marginBottom="@dimen/size_3dp"
            android:text="中国石油运输有限公司江苏分公司"
            android:textSize="@dimen/tv_10sp" />

        <TextView
            android:id="@+id/name_carrier_list"
            style="@style/Tv_Default_Style"
            android:layout_marginBottom="@dimen/size_3dp"
            android:text="" />

        <TextView
            android:id="@+id/type_carrier_list"
            style="@style/Tv_Content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apti_carrier_list"
            style="@style/Tv_Default_Style"
            android:layout_marginBottom="@dimen/size_3dp"
            android:background="@drawable/shape_solid_white_5dp"
            android:gravity="center"
            android:paddingBottom="@dimen/size_3dp"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingTop="@dimen/size_3dp"
            android:text="" />

        <TextView
            android:id="@+id/contract_carrier_list"
            style="@style/Tv_Default_Style"
            android:layout_marginBottom="@dimen/size_3dp"
            android:text=""
            android:textSize="@dimen/tv_12sp" />

        <TextView
            android:id="@+id/tel_carrier_list"
            style="@style/Tv_Default_Style"
            android:autoLink="all"
            android:text=""
            android:textSize="@dimen/tv_12sp" />
    </LinearLayout>
</LinearLayout>
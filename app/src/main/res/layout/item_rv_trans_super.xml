<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_5dp"
    android:background="@drawable/shape_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Tv_Content"
            android:layout_marginRight="@dimen/size_5dp"
            android:background="@drawable/shape_stroke_circle_red"
            android:padding="@dimen/size_3dp"
            android:text="提"
            android:textColor="@color/color_red" />

        <TextView
            android:id="@+id/tv_trans_list_tiOil"
            style="@style/Tv_Default_Style"
            android:text="加油站"
            android:textSize="@dimen/tv_16sp" />

        <TextView
            android:id="@+id/tv_trans_list_number"
            style="@style/Tv_Content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_5dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_trans_list_statue"
            style="@style/Tv_Default_Style"
            android:layout_gravity="right"
            android:background="@drawable/shape_stroke_bg_5dp"
            android:gravity="right"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:text="已发班" />
    </LinearLayout>

    <View
        style="@style/View_Line_Style"
        android:layout_marginBottom="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trans_list_plate"
            style="@style/Tv_Content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="苏123223" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/Tv_Content"
                android:layout_marginRight="@dimen/size_5dp"
                android:background="@drawable/shape_stroke_circle_green"
                android:padding="@dimen/size_3dp"
                android:text="发"
                android:textColor="@color/color_green" />

            <TextView
                android:id="@+id/tv_trans_list_gas"
                style="@style/Tv_Default_Style"
                android:text="加油站"
                android:textSize="@dimen/tv_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_trans_list_time"
            style="@style/Tv_Content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:text="2019-09-09 至 2019-10-10" />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_5dp"
    android:background="@drawable/shape_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_statis_top1"
            style="@style/Tv_Default_Style"
            android:singleLine="false"
            android:text="" />

        <TextView
            android:id="@+id/tv_statis_top2"
            style="@style/Tv_Default_Style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="" />
    </LinearLayout>

    <View
        style="@style/View_Line_Style"
        android:layout_marginBottom="@dimen/size_5dp"
        android:layout_marginTop="@dimen/size_5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_statis_type"
            style="@style/Tv_Content"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Tv_Content"
                android:paddingBottom="@dimen/size_3dp"
                android:text="月度运输次数" />

            <TextView
                android:id="@+id/tv_statis_month"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Tv_Content"
                android:paddingBottom="@dimen/size_3dp"
                android:text="累计运输次数" />

            <TextView
                android:id="@+id/tv_statis_count"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
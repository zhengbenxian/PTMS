<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/size_10dp">

    <RelativeLayout
        android:layout_width="@dimen/size_100dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dispatch"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:src="@drawable/ic_img_failed" />

        <TextView
            android:id="@+id/tv_driver_type"
            style="@style/Tv_Default_Style"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_solid_green_5dp"
            android:paddingBottom="@dimen/size_3dp"
            android:paddingLeft="@dimen/size_8dp"
            android:paddingRight="@dimen/size_8dp"
            android:paddingTop="@dimen/size_3dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dispatch_driver"
            style="@style/Tv_Default_Style"
            android:layout_below="@+id/img_dispatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_8dp"
            android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_5dp"
        android:orientation="vertical"
        android:padding="@dimen/size_5dp">

        <TextView
            android:id="@+id/tv_dispatch_plate"
            style="@style/Tv_Default_Style"
            android:layout_marginBottom="@dimen/size_5dp"
            android:text=""
            android:textSize="@dimen/tv_16sp" />

        <TextView
            android:id="@+id/tv_dispatch_company"
            style="@style/Tv_Content"
            android:layout_marginBottom="@dimen/size_5dp"
            android:text="" />

        <LinearLayout
            android:id="@+id/layout_dispatch_aptitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
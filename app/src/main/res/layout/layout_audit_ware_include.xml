<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/size_2dp"
    android:background="@color/color_bg"
    android:orientation="vertical"
    android:paddingRight="@dimen/size_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_15dp"
        android:paddingTop="@dimen/size_15dp">

        <TextView
            android:id="@+id/tv_audit_plate"
            style="@style/Tv_Default_Style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="苏A" />

        <TextView
            android:id="@+id/tv_audit_plate_same"
            style="@style/Tv_Bg_Padding_Style"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@drawable/shape_stroke_bg_5dp"
            android:gravity="center"
            android:text="一致"
            android:textColor="@color/color_tv_second"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_audit_msg_verifi"
            style="@style/Tv_Bg_Padding_Style"
            android:text="信息核实" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_5dp">

        <TextView
            android:id="@+id/tv_audit_have"
            style="@style/Tv_Default_Style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="违规单已提出"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_audit_safe_same"
            style="@style/Tv_Bg_Padding_Style"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@drawable/shape_stroke_bg_5dp"
            android:gravity="center"
            android:text="通过"
            android:textColor="@color/color_tv_second"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_audit_safe_check"
            style="@style/Tv_Bg_Padding_Style"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="安全检查" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_no_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_15dp"
        android:paddingTop="@dimen/size_15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_audit_number"
                style="@style/Tv_Default_Style"
                android:drawableLeft="@drawable/ic_warning_ring"
                android:drawablePadding="@dimen/size_5dp"
                android:gravity="center"
                android:text="@string/have_number_check" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_audit_go"
            style="@style/Tv_Default_Style"
            android:text="@string/go_check"
            android:textColor="@color/color_green" />
    </LinearLayout>
</LinearLayout>
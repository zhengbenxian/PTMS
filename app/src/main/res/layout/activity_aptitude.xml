<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pacia.ptms.carrier.info.AptitudeActivity">

    <TextView
        style="@style/Tv_Default_Style"
        android:padding="@dimen/size_20dp"
        android:text="承运资质"
        android:textSize="@dimen/tv_16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_5dp"
        android:background="@drawable/shape_solid_white_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_20dp">

            <TextView
                style="@style/Tv_Default_Style"
                android:layout_marginRight="@dimen/size_10dp"
                android:text="资质名称" />

            <EditText
                android:id="@+id/et_apti_name"
                style="@style/Et_Login_Style"
                android:background="@null" />
        </LinearLayout>

        <View
            style="@style/View_Line_Style"
            android:layout_marginBottom="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_20dp">

            <TextView
                style="@style/Tv_Default_Style"
                android:layout_marginRight="@dimen/size_10dp"
                android:text="证件号码" />

            <EditText
                android:id="@+id/et_apti_No"
                style="@style/Et_Login_Style"
                android:background="@null" />
        </LinearLayout>

        <View
            style="@style/View_Line_Style"
            android:layout_marginBottom="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_20dp">

            <TextView
                style="@style/Tv_Default_Style"
                android:layout_marginRight="@dimen/size_10dp"
                android:text="证件时效" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_apti_sTime"
                    style="@style/Tv_Default_Style"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="开始时间" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/size_5dp"
                    android:paddingRight="@dimen/size_5dp"
                    android:src="@mipmap/red_rocket" />

                <TextView
                    android:id="@+id/tv_apti_eTime"
                    style="@style/Tv_Default_Style"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="结束时间" />
            </LinearLayout>
        </LinearLayout>

        <com.pacia.ptms.widget.MyGridView
            android:id="@+id/gv_apti_img"
            style="@style/GridView_Style"
            android:layout_marginBottom="@dimen/size_5dp" />
    </LinearLayout>
</LinearLayout>

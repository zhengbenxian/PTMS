<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/size_10dp"
    android:scrollbars="none"
    tools:context="com.pacia.ptms.carrier.info.BasicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Tv_Content"
                android:text="公司名称：" />

            <TextView
                android:id="@+id/tv_company_name"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Tv_Content"
                android:text="承运类型：" />

            <TextView
                android:id="@+id/tv_company_type"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Tv_Content"
                android:text="责任法人：" />

            <TextView
                android:id="@+id/tv_legal_person"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Tv_Content"
                android:text="联系电话：" />

            <TextView
                android:id="@+id/tv_company_tel"
                style="@style/Tv_Default_Style"
                android:text="" />
        </LinearLayout>

        <TextView
            style="@style/Tv_Default_Style"
            android:text="承运资质"
            android:textColor="@color/color_tv_second" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_basic_apti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_5dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>

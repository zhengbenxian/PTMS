<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.pacia.ptms.carrier.person.PersonInfoActivity">

    <LinearLayout style="@style/LinearMatchStyle_Ver">

        <TextView
            style="@style/Tv_Default_Style"
            android:layout_gravity="right"
            android:padding="@dimen/size_10dp"
            android:text="@string/car_record"
            android:textColor="@color/color_blue" />

        <ImageView
            android:id="@+id/img_p_icon"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10dp"
            android:src="@drawable/ic_no_header" />

        <TextView
            android:id="@+id/tv_p_name"
            style="@style/Tv_Default_Style"
            android:layout_gravity="center"
            android:autoLink="all"
            android:paddingTop="@dimen/size_10dp"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_p_tel"
            style="@style/Tv_Default_Style"
            android:layout_gravity="center"
            android:autoLink="all"
            android:padding="@dimen/size_10dp"
            android:text=""
            android:textColor="@color/color_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10dp">

            <TextView
                style="@style/Tv_Content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="所属岗位" />

            <TextView
                style="@style/Tv_Content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="所属企业" />

            <TextView
                style="@style/Tv_Content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="培训情况" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10dp">

            <TextView
                android:id="@+id/tv_p_staff"
                style="@style/Tv_Default_Style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/tv_p_company"
                style="@style/Tv_Default_Style"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/tv_p_test"
                style="@style/Tv_Default_Style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <TextView
            style="@style/Tv_Default_Style"
            android:layout_margin="@dimen/size_10dp"
            android:gravity="center"
            android:drawablePadding="@dimen/size_8dp"
            android:drawableLeft="@drawable/ic_login"
            android:text="个人信息"
            android:textSize="@dimen/tv_16sp" />

        <View
            style="@style/View_Line_Style"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_p_aptitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_10dp" />
    </LinearLayout>
</ScrollView>
